<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<!-- For the id, always use something unique - put your name, a colon, and then the package name. -->
	<id>WWakerFAN:AdditionalPolls</id>
	<!-- Below should be the name of this package. -->
	<name>Additional Polls</name>
	<!-- The version of this modification.  Keep it numeric so PHP can tell that old < new. -->
	<version>1.2.2</version>

	<!-- Type, one of: modification, avatar, language. -->
	<type>modification</type>

	<!-- Installation, the key part of this file. -->
	<install for="1.1.12">
		<readme type="file" parsebbc="true">readme.txt</readme>
		<modification type="file" format="xml">modification.xml</modification>
		<code type="file">install.php</code>
	</install>
	
	<uninstall for="1.1.*">
		<modification type="file" format="xml" reverse="true">modification.xml</modification>
	</uninstall>
	
	<install for="2.0 RC4">
		<readme type="file" parsebbc="true">readme2.txt</readme>
		<modification type="file" format="xml">modification2.xml</modification>
		<database type="file">install2.php</database>
	</install>
	
	<uninstall for="2.*">
		<modification type="file" format="xml" reverse="true">modification2.xml</modification>
		<database type="file">uninstall2.php</database>
	</uninstall>
</package-info>
